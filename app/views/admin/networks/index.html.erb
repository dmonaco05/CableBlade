<h1>Networks Admin</h1>

<p>
  <%= link_to "New Network", new_admin_network_path, class: 'btn btn-primary' %>
</p>

<table class="table table-hover table-bordered">
  <tr>
    <th>ID</th>
    <th>Name</th>
    <th>Image</th>
    <th>Created At</th>
  </tr>
  <% for network in @networks %>
    <tr>
      <td><%= link_to network.id, admin_network_path(network) %></td>
      <td><%= link_to network.name, admin_network_path(network) %></td>
      <td><%= network.image %></td>
      <td><%= network.created_at %></td>
    </tr>
  <% end %>
</table>
