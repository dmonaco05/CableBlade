<h1>Select Shows</h1>
<p>Now pick the shows that you watch, when you are finished click next.</p>

<%= form_tag(results_path, method: 'get') do %>
  <% @shows.each do |show| %>
    <div class="col-xs-12 col-md-12">
      <label>
        <%= check_box_tag('shows[]', show.id) %>
        <%= show.name %> -
        <%= show.network.name %>
      </label>
    </div>
  <% end %>
  <div class="col-xs-12"><input type="submit" value="Next" class="btn btn-primary btn-lg"></div>
<% end %>
